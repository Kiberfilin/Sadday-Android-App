<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin = "8dp"
    android:background="@color/colorShadeForMainMenuElements">

    <TextView
            android:id="@+id/newsPostItemAuthorTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:text="author_tv"
            android:textColor="@color/colorMainText"
            app:layout_constraintEnd_toStartOf="@+id/newsPostItemDateTv"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/newsPostItemDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="date_tv"
        android:textColor="@color/colorMainText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
            android:id="@+id/newsPostItemDivider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newsPostItemDateTv"
            app:layout_constraintHorizontal_bias="0.0" android:visibility="invisible"/>

    <TextView
            android:id="@+id/newsPostItemPostText"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Post_Text"
            android:textColor="@color/colorMainText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newsPostItemDivider2"
            app:layout_constraintVertical_bias="0.0"
            tools:text="@tools:sample/lorem/random" android:maxLines="8"/>

    <View
            android:id="@+id/newsPostItemDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newsPostItemPostText"
            app:layout_constraintVertical_bias="0.0" android:visibility="invisible"/>

    <TextView
            android:id="@+id/newsPostItemMoreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/news_post_button_margin_interval"
            android:layout_marginBottom="8dp"
            android:paddingStart="@dimen/news_post_button_padding_interval"
            android:paddingTop="@dimen/news_post_button_padding_interval"
            android:paddingEnd="@dimen/news_post_button_padding_interval"
            android:paddingBottom="@dimen/news_post_button_padding_interval"
            android:text="more"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@color/colorMainText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newsPostItemDivider"
            app:layout_constraintVertical_bias="1.0" android:visibility="visible" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"/>

</android.support.constraint.ConstraintLayout>